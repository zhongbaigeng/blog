    <select id="findTypeByIds" resultMap="typeMap" parameterType="list">
        SELECT
        <include refid="allColumns" />
        FROM type t WHERE t.id IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
